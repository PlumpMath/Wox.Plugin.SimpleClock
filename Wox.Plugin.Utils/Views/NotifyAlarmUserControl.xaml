<UserControl x:Class="Wox.Plugin.Views.NotifyAlarmUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wox.Plugin.Utils"
             mc:Ignorable="d" MinWidth="300"  MinHeight="150" Loaded="ControlLoaded" >
    <Border BorderBrush="Orange" BorderThickness="0">
        <StackPanel Background="#FFFFFF">
            <TextBlock x:Name="txtblkAlarmName" HorizontalAlignment="Center" Margin="10,15, 10, 0"  TextWrapping="Wrap" TextAlignment="Center" Text="Do that thing you had to do yesterday but didn't" VerticalAlignment="Top" FontSize="18.667"/>
            <TextBlock x:Name="txtblkAlarmTime" HorizontalAlignment="Center" Margin="10,10,10,0" TextWrapping="Wrap" Text="01/01/2015 00:00" VerticalAlignment="Bottom" Foreground="#454545" FontSize="32"/>
            <Border x:Name="brdrButton" HorizontalAlignment="Center" Height="30" Margin="10,10"  VerticalAlignment="Bottom" Width="150" Background="#FFB20800"  BorderBrush="#FF3E3E3E" MouseUp="button_MouseUp">
                <TextBlock Text="Stop alarm!" FontSize="14pt" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

        </StackPanel>
    </Border>
</UserControl>
